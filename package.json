{
  "name": "auditauth-sdk",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build -ws",
    "test": "vitest run",
    "test:consumers": "node ./scripts/test-consumers.mjs",

    "build:core": "npm run build -w @auditauth/core",
    "dev:core": "AUDITAUTH_SDK_ENV=development npm run dev -w @auditauth/core",

    "build:web": "npm run build -w @auditauth/web",
    "dev:web": "AUDITAUTH_SDK_ENV=development npm run dev -w @auditauth/web",

    "build:react": "npm run build -w @auditauth/react",
    "dev:react": "AUDITAUTH_SDK_ENV=development npm run dev -w @auditauth/react",

    "build:node": "npm run build -w @auditauth/node",
    "dev:node": "AUDITAUTH_SDK_ENV=development npm run dev -w @auditauth/node",

    "build:next": "npm run build -w @auditauth/next",
    "dev:next": "AUDITAUTH_SDK_ENV=development npm run dev -w @auditauth/next",

    "dev:example-vanilla": "AUDITAUTH_SDK_ENV=development VITE_AUDITAUTH_SDK_ENV=development npm run dev -w example-vanilla -- --port 5173",
    "build:example-vanilla": "npm run build -w example-vanilla",
    "preview:example-vanilla": "npm run preview -w example-vanilla",

    "dev:example-next": "AUDITAUTH_SDK_ENV=development NEXT_PUBLIC_AUDITAUTH_SDK_ENV=development npm run dev -w example-next -- --port 5173",
    "build:example-next": "npm run build -w example-next",
    "preview:example-next": "npm run preview -w example-next",

    "dev:example-react": "AUDITAUTH_SDK_ENV=development VITE_AUDITAUTH_SDK_ENV=development npm run dev -w example-react -- --port 5173",
    "build:example-react": "npm run build -w example-react",
    "preview:example-react": "npm run preview -w example-react"
  },
  "devDependencies": {
    "@testing-library/react": "^16.2.0",
    "jsdom": "^26.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
